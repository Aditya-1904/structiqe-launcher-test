<Window x:Class="structIQe_Application_Manager.Launcher.Views.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
    ShowInTaskbar="False"
        Topmost="True"
        Height="700" Width="1000"
        WindowStartupLocation="CenterOwner">

    <Grid Cursor="Wait" Height="700" IsEnabled="False">
        <Border Width="300" Height="150" Background="White" CornerRadius="10" Padding="20"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Installing, please wait..." FontSize="16" FontWeight="Bold" Margin="0,0,0,15" TextAlignment="Center"/>
                <ProgressBar Width="200" Height="20" IsIndeterminate="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
